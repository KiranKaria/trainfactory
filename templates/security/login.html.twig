{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light navbar-bg mb-5">
        <ul class="nav">
            <li class="nav-item">
                <a class="navbar-brand space-brand" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="navbar-brand space-brand" href="/training">Trainings overzicht</a>
            </li>

            <li class="nav-item">
                <a class="navbar-brand space-brand" href=/les>Lessen overzicht</a>
            </li>

            <li class="nav-item">
                <a class="navbar-brand space-brand" href="/contact">Contact</a>
            </li>

            <li class="nav-item">
                <a class="navbar-brand space-brand" href="/register">Registreren</a>
            </li>

            <li class="nav-item">
                <a class="navbar-brand space-brand" href="/login">Inloggen</a>
            </li>
        </ul>
    </nav>

    <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}



    <h1 class="h3 mb-3 font-weight-normal">Log in!</h1>
    <label for="inputUsername">Gebruikersnaam</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
    <label for="inputPassword">Wachtwoord</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
       Log in
    </button>
</form>

    <style>
        .active{
            color: #C82829;
        }
    </style>
    {% if app.user %}
        <div class="mb-3">
            je bent ingelogd als {{ app.user.username }}, <a href="{{ path('app_logout') }}">Log uit</a>
        </div>
    {% endif %}
{% endblock %}
