{% extends 'base.html.twig' %}

{% block title %}Les index{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light navbar-bg mb-5">
        <ul class="nav">
            <li class="nav-item">
                <a class="navbar-brand space-brand" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="navbar-brand space-brand" href="/training">Trainings overzicht</a>
            </li>

            <li class="nav-item">
                <a class="navbar-brand space-brand" href=/les>Lessen overzicht</a>
            </li>

            <li class="nav-item">
                <a class="navbar-brand space-brand" href="/contact">Contact</a>
            </li>

            <li class="nav-item">
                <a class="navbar-brand space-brand" href="/register">Registreren</a>
            </li>

            <li class="nav-item">
                <a class="navbar-brand space-brand" href="/login">Inloggen</a>
            </li>
        </ul>
    </nav>

    <h1>Les index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tijd</th>
                <th>Datum</th>
                <th>Locatie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for le in les %}
            <tr>
                <td>{{ le.id }}</td>
                <td>{{ le.tijd ? le.tijd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ le.datum ? le.datum|date('Y-m-d H:i:s') : '' }}</td>

                <td>
                    <a href="{{ path('les_show', {'id': le.id}) }}">show</a>
                    <a href="{{ path('les_edit', {'id': le.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Niks gevonden</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('les_new') }}">Create new</a>
{% endblock %}
